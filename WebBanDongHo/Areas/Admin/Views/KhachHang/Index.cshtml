@using WebBanDongHo.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<KhachHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2> Quản lý khách hàng </h2>
<div class="page-wrapper">
    <table width="100" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Mã khách hàng</th>
                <th>Tên khách hàng</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Ngày sinh</th>
                <th>Địa chỉ</th>
                <th>Tên đăng nhập</th>
                @*<th>Mật khẩu</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">

                    <td>
                        @item.MaKhachHang
                    </td>
                    <td>
                        @item.TenKhachHang
                    </td>

                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.SDT
                    </td>
                    <td>
                        @item.NgaySinh
                    </td>
                    <td>
                        @item.DiaChi
                    </td>
                    <td>
                        @item.ID
                    </td>
                    @*<td>
                            @item.Pasword
                            @Html.Password("password")
                        </td>*@

                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.table-responsive -->

<!-- /.panel-body -->
<footer>
    <div class="MenuTrang" style="text-align:center;">
        trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action
             ("Index", new { page = page })) <br />
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>

</footer>

