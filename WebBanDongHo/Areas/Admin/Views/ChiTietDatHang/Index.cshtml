@using WebBanDongHo.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<ChiTietDat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi Tiết Đặt Hàng</h2>
<div class="page-wrapper">
    <table width="100" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    Số đơn đặt hàng
                </th>
                <th>
                    Mã đồng hồ
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Đơn giá
                </th>
                <th> 
                    Thành tiền
                </th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">

                    <td>
                        @item.SoDH
                    </td>
                    <td>

                        @item.MaDongHo
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @item.DonGia VNĐ
                    </td>
                    <td>
                        @item.ThanhTien VNĐ
                    </td>
                  
                </tr>
            }
    </table>
</div>
<footer>
    <div class="MenuTrang" style="text-align:center;">
        trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action
             ("Index", new { page = page })) <br />
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>

</footer>



